{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    // "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build/"]
}
